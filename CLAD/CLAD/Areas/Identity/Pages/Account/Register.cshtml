@page
@model RegisterModel
@{
    ViewData["Title"] = "Account registreren";
}

<link href="~/css/Register.css" rel="stylesheet" />

<div class="container">
<div class="row">
    <div class="col-md-6 page-content">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Een nieuw account aanmaken.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" placeholder="Uw email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Wachtwoord</label>
                <input asp-for="Input.Password" placeholder="Uw wachtwoord" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Wachtwoord herhalen</label>
                <input asp-for="Input.ConfirmPassword" placeholder="Herhaal uw wachtwoord" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Registreer</button>
        </form>
    </div>
    <div class="col-md-6 page-content">
        <p class="contact">Mocht u niet kunnen registreren dan kunt u ons mailen met het probleem naar fixitgroep@gmail.com.</p>
    </div>
</div>
 </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
