        @if (Model.Count() == 0)
        {
            <p>Er zijn nog geen artikelen geplaatst</p>
        }
        else
        {
            @foreach (var item in Model)
            {

                <div class="recent-block reveal-onscroll-recentarticle">
                    <h3 class="heading-tertiary" style="float: right; margin-right: 600px;"> Title </h3>
                    <p class="nav-block-text" style="margin-left: 28%; /*margin-top: 30px;*/">
                        @Html.Raw(System.Web.HttpUtility.HtmlDecode(item.Content))
                    </p>
                </div>
            }
        }


    </section>
