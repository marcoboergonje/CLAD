@model CLAD.Models.Article

@{
    ViewData["Title"] = "Edit";
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<html>
<head>
    <script src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=d214d59wwck9jdffvjm5uanems5fcl78mpsgyq0l7qswmz8y"></script>
    <script>
        tinymce.init({
            selector: '#mytextarea',
            plugins: 'emoticons',
            toolbar: "emoticons",
            width: 600,
            height: 600
        });
    </script>
</head>
<body>
    <div class="container">
        <h1>Edit</h1>

        <h4>Article</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="AuthorId" class="control-label"></label>
                        <input asp-for="AuthorId" class="form-control" disabled />
                        <span asp-validation-for="AuthorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PublicationDate" class="control-label"></label>
                        <input asp-for="PublicationDate" class="form-control" disabled/>
                        <span asp-validation-for="PublicationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Content" id="mytextarea" />
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsVisible" /> @Html.DisplayNameFor(model => model.IsVisible)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>
</html>