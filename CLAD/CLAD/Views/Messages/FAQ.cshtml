@model IEnumerable<CLAD.Models.Message>
@{
    ViewData["Title"] = "Vragen";
}
<div class="container">
    <h1 style="margin-bottom:5%;">Frequently asked questions</h1>
    <table id="jquerytable" class="table table-striped">
        <thead>
            <tr>
                <th>Vraag</th>
                <th>Auteur</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <p style="visibility:hidden;">@Html.DisplayFor(modelItem => item.Date)</p>
                        <button class="btn btn-outline-primary">Antwoord bekijken</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>