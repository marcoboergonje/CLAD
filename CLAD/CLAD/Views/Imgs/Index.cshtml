@model IEnumerable<CLAD.Models.Img>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-4" style="margin-top:50px; margin-bottom:50px;">
                    <div class="card" style="width:300px; height: 300px;">
                        <img class="card-img-top" src="~/Img/Uploads/@Html.DisplayFor(modelItem => item.ImgName)" alt="Card image" style="width:100%; height: 100%;">

                    </div>
                </div>
            }

